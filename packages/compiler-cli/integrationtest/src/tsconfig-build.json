{
  "angularCompilerOptions": {
    "debug": true,
    "enableSummariesForJit": true,
    "alwaysCompileGeneratedCode": true,
    "i18nFormat": "xlf"
  },

  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "",
    "declaration": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "types": ["jasmine"]
  },

  "files": [
    "module",
    "bootstrap"
  ]
}
